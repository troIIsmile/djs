{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2019",
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "strict": true,
    "newLine": "lf",
    "alwaysStrict": true,
    "moduleResolution": "Node",
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "resolveJsonModule": false
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "node_modules/"
  ]
}
